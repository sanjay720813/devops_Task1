pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/sanjay720813/devops_Task1.git'
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Running tests (mock)"'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t devops_task1_app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 3000:3000 --name devops_app devops_task1_app'
            }
        }
    }
}
